.error text{margin-left: 15rpx;font-size: 40rpx;color: red;}
.success text{margin-left: 15rpx;font-size: 40rpx;color: green;}
.button_fh{width: 50%; margin-top: 60rpx;}
.info{width: 100%;height: 90rpx;border-radius: 12rpx;margin-top:30rpx;position:relative;line-height:90rpx;font-size:32rpx;color:#B6B6B6;display: flex;border:2rpx solid #979797;}
