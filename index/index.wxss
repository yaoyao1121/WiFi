.login-btn , .login-btn-use{height: 88rpx;line-height: 88rpx;border-radius: 8rpx;
  color: #fff;font-size:32rpx;text-align: center;margin-top:60rpx;}
.login-btn{background: #5BA8FF;}
.login-btn-use{background: #F5A623;}
.mt50{margin-top:100rpx;}
.pt30{padding:30rpx 0;}
.prg_box{width:100vw;height:100vh;position:absolute;top:0;background:rgba(0,0,0,0.3);}
.progress_box{position: absolute;width:110px;height: 110px;  display: flex;  align-items: center;
  justify-content: center;top:0;left:0;right:0;bottom:0;margin:auto;padding:20rpx;        
  background:#fff;border-radius:8rpx;}
.progress_bg{position: absolute;width:110px;height: 110px; }
.progress_canvas{ width:110px;height: 110px; } 
.progress_text{ position: absolute; display: flex;  align-items: center;justify-content: center}
.progress_info{   font-size: 24rpx;letter-spacing: 2rpx} 
